<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvAppointmentDoctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAppointmentSpecialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppointmentDoctorName"
        android:text="Specialization" />

    <TextView
        android:id="@+id/tvAppointmentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppointmentSpecialization"
        android:text="Location"/>

    <TextView
        android:id="@+id/tvAppointmentDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAppointmentLocation"
        android:layout_marginTop="4dp"
        android:text="Date and Time" />

</RelativeLayout>
