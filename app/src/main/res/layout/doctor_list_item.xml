<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/doctorIconItem"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvDoctorNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/doctorIconItem"
        android:text="Doctor Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDoctorSpecItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/doctorIconItem"
        android:layout_below="@id/tvDoctorNameItem"
        android:text="Specialization"/>

    <TextView
        android:id="@+id/tvDoctorAddressItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/doctorIconItem"
        android:layout_below="@id/tvDoctorSpecItem"
        android:text="Location"/>

    <Button
        android:id="@+id/btnDoctorProfileItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#0060D8"
        android:text="Profile Info"/>

</RelativeLayout>

